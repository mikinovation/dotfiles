{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
  ],
  "labels": [
    "dependencies"
  ],
  "schedule": [
    "every weekend"
  ],
  "prHourlyLimit": 5,
  "prConcurrentLimit": 10,
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^config/nvim/plugins/.+\\.lua$"],
      "matchStrings": [
        "(?<depName>[^/]+/[^/\"']+).*?branch\\s*=\\s*[\"'](?<currentValue>[^\"']+)[\"']"
      ],
      "datasourceTemplate": "git-refs",
      "packageNameTemplate": "https://github.com/{{{depName}}}"
    },
    {
      "customType": "regex",
      "fileMatch": ["^config/nvim/plugins/.+\\.lua$"],
      "matchStrings": [
        "(?<depName>[^/]+/[^/\"']+).*?tag\\s*=\\s*[\"'](?<currentValue>[^\"']+)[\"']"
      ],
      "datasourceTemplate": "github-tags",
      "packageNameTemplate": "{{{depName}}}"
    },
    {
      "customType": "regex",
      "fileMatch": ["^config/nvim/plugins/.+\\.lua$"],
      "matchStrings": [
        "(?<depName>[^/]+/[^/\"']+).*?commit\\s*=\\s*[\"'](?<currentDigest>[^\"']+)[\"']"
      ],
      "datasourceTemplate": "git-refs",
      "packageNameTemplate": "https://github.com/{{{depName}}}",
      "currentValueTemplate": "main"
    },
    {
      "customType": "regex",
      "fileMatch": ["^config/nvim/plugins/.+\\.lua$"], 
      "matchStrings": [
        "(?<depName>[^/]+/[^/\"']+).*?version\\s*=\\s*[\"'](?<currentValue>[^\"']+)[\"']"
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "{{{depName}}}"
    }
  ],
  "ignoreDeps": [],
  "ignorePaths": [],
}
