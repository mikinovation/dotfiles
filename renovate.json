{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
  ],
  "labels": [
    "dependencies"
  ],
  "schedule": [
    "every weekend"
  ],
  "prHourlyLimit": 5,
  "prConcurrentLimit": 10,
  "regexManagers": [
    {
      "fileMatch": ["^config/nvim/plugins/.+\\.lua$"],
      "matchStrings": [
        "\\s*version\\s*=\\s*[\"']?(?<currentValue>[^\"'\\s]+)[\"']?"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "{{#if lookupName}}{{{lookupName}}}{{else}}{{{depName}}}{{/if}}",
      "packageNameTemplate": "{{#if packageName}}{{{packageName}}}{{else}}{{{depName}}}{{/if}}"
    },
    {
      "fileMatch": ["^config/nvim/plugins/.+\\.lua$"],
      "matchStrings": [
        "\\s*branch\\s*=\\s*[\"'](?<currentValue>[^\"'\\s]+)[\"']"
      ],
      "datasourceTemplate": "github-branches",
      "depNameTemplate": "{{#if lookupName}}{{{lookupName}}}{{else}}{{{depName}}}{{/if}}",
      "packageNameTemplate": "{{#if packageName}}{{{packageName}}}{{else}}{{{depName}}}{{/if}}"
    },
    {
      "fileMatch": ["^config/nvim/plugins/.+\\.lua$"],
      "matchStrings": [
        "\\s*commit\\s*=\\s*[\"'](?<currentValue>[^\"'\\s]+)[\"']"
      ],
      "datasourceTemplate": "github-commits",
      "depNameTemplate": "{{#if lookupName}}{{{lookupName}}}{{else}}{{{depName}}}{{/if}}",
      "packageNameTemplate": "{{#if packageName}}{{{packageName}}}{{else}}{{{depName}}}{{/if}}"
    },
    {
      "fileMatch": ["^config/nvim/plugins/.+\\.lua$"],
      "matchStrings": [
        "github\\s*=\\s*[\"'](?<depName>[^/\"']+/[^/\"']+)[\"']"
      ],
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^v?(?<version>.*)$"
    }
  ],
  "ignoreDeps": [],
  "ignorePaths": [],
}
